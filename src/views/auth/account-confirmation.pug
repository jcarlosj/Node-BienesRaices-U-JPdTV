extends ../layout/index

//- Define bloque de contenido de la pagina
block page_body
    .py-10
        h1( class="text-4xl my-10 font-extrabold text-center" ) Bienes
            span( class="font-normal" ) Raices
        h2( class="text-center text-2xl" ) #{ name_page }

    .bg-white.shadow.py-8.px-4.rounded-lg.max-w-md.mx-auto
        p( class=`${ error ? 'bg-red-500' : 'bg-green-500' } py-2 px-5 rounded-lg w-full text-center text-white` ) #{ message }
        
        if ! error 
            p( class="text-center mt-10" ) Ya puedes 
                a( href="/auth/login" class="" ) #{ `Iniciar sesion` }