doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Bienes Raices | #{ name_page }
        link(rel="stylesheet", href="/css/main.css")

    body(class="min-h-screen bg-gray-50") 

        if isLoggedIn
            //- header es el nombre del archivo dentro del mismo directorio
            include header

        main( class="mx-auto container mt-10 px-2" )
            //- Bloque donde los templates inyectaran su contenido 
            block page_body   

        block scripts  
